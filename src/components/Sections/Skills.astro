---
import Section from "@/components/Section.astro";

import { skills } from "@cv";
---

<Section title="Skills">

    <ul>
        {
            skills.map(({ name }) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>

</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li{
        border-radius: 6px;
        background: #ccc;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.5rem;
        letter-spacing: 0.02rem;
    }

    li:hover{
        background: #333;
        color: white;
        cursor: pointer;
    }
</style>