---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: sans-serif, Monaco, Lucida Console, 'Courier New', Courier, monospace;
		background-color: white;
		letter-spacing: -0.1rem;
	}
	
	body, figure{
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		line
	}

	p{
		color: #666;
		font-size: .9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
		letter-spacing: -0.05rem;
	}

	.print{
        display: none;
    }

    @media print{
        .print{
            display: block;
        }

		.no_print{
			display: none;
		}

		.edu{
			padding-top: 50px;
		}

    }

</style>
